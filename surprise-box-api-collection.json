    },
    "item": [
        {
            "name": "Buy Surprise Box",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/surprise-boxes/{{boxId}}/buy/{{userId}}",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "surprise-boxes",
                        "{{boxId}}",
                        "buy",
                        "{{userId}}"
                    ]
                }
            }
        },
        {
            "name": "Get Customer's Purchased Boxes",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/api/surprise-boxes/customer/{{userId}}",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "surprise-boxes",
                        "customer",
                        "{{userId}}"
                    ]
                }
            }
        },
        {
